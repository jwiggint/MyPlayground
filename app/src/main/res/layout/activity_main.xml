<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="joelwigginton.myplayground.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:text="@string/moreMinions" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/minion"
            android:layout_weight="0.49" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@android:style/Widget.Holo.RatingBar"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:numStars="@android:integer/status_bar_notification_info_maxnum"
            android:rating="5" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/yes" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:switchTextAppearance="@style/TextAppearance.AppCompat.Display1"
            android:text="@string/setting"
            android:textOff="@string/deactivated"
            android:textOn="@string/activated"
            tools:checked="true" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/password"
            android:ems="10"
            android:inputType="textPassword"
            android:password="?android:attr/windowTranslucentStatus"
            android:soundEffectsEnabled="?android:attr/windowTranslucentStatus" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/holo_green_dark" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?android:attr/colorActivatedHighlight"
            android:ems="40"
            android:hyphenationFrequency="full"
            android:inputType="phone"
            android:phoneNumber="true"
            android:selectAllOnFocus="false"
            android:typeface="sans" />

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="64dp"
            android:paddingTop="15dp" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="@string/deactivated"
            android:textOn="@string/activated"
            app:buttonTint="@android:color/holo_blue_bright" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
